<header class="header">

	<a href="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>

</header>

<main class="main">

	{{#with info}}
	<div class="info">
		<div class="info_title">{{title}}</div>
		<div class="info_text">{{description}}</div>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}" />
			{{/each}}
		</div>

		<div class="form_checkbox">

			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h1 class="updates_title">{{title}}</h1>

	{{#each list}}

	<div class="updates_list">
		{{> logo-6}}
		<div>
			<strong class="updates_list_name">@{{nickname}}</strong>
			<p class="updates_list_text">{{description}}</p>

		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="url" class="updates_link">{{text}}</a>
	{{/with}}
</div>
{{/with}}



<div class="expirience">
	{{#with expirience}}
	<h1 class="expirience_title">{{title}}</h1>

	<badge class="expirience_badge">{{badge}}</badge>
	<div class="expirience_block">

		{{#each list}}
		<div class="expirience_list">
			<strong class="expirience_list_title">{{name}}</strong>
			<p class="expirience_list_text">{{details}}</p>
		</div>
		{{/each}}
	</div>

	{{/with}}
</div>



<footer class="footer" id="test">

	<div>
		{{> logo}}
		<span class="footer_copyright">Â© 2023</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>